        <!-- ZS all shopex listing begin -->
        <!-- #DESIGN_CHANGE BEGIN -->
        <!-- <section id="qna-page"> -->
        <section id="qna-page" style="padding-top: 20px;">
        <!-- #DESIGN_CHANGE END -->
          <%- include zs_banner_take_tour.ejs %>
          
          <!-- Comment main row begin -->
          <div class="row">
            <!-- Single QNA page main column begin -->
            <%//- include zs_shopex_main_column.ejs %>
